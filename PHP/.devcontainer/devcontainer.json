{
  "name": "PHP Dev Container",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "php",
  "workspaceFolder": "/workspace",
  "remoteUser": "loic",
  "containerUser": "loic",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],
  "forwardPorts": [
    80
  ],
  // "forwardPorts": [
  //   8000,
  //   5000,
  //   3306,
  //   17170,
  //   3900
  // ],
  "postCreateCommand": "bash post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "xabikos.JavaScriptSnippets",
        "wix.vscode-import-cost",
        "yzhang.markdown-all-in-one",
        "zobo.php-intellisense",
        "bmewburn.vscode-intelephense-client",
        "jinxdash.prettier-rust",
        "clarkyu.vscode-sql-beautify",
        "meganrogge.template-string-converter",
        "mblode.twig-language-2",
        "TheNouillet.symfony-vscode",
        "ms-python.python",
        "formulahendry.auto-rename-tag"
      ],
      "settings": {
        "php.executablePath": "/usr/local/bin/php",
        "php.validate.executablePath": "/usr/local/bin/php",
        "editor.formatOnSave": true,
        "editor.fontSize": 18,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          }
        },
        "emmet.includeLanguages": {
          "twig": "html",
          "tera": "html"
        },
        "intelephense.files.exclude": [
          "**/.git/**",
          "**/.svn/**",
          "**/.hg/**",
          "**/CVS/**",
          "**/.DS_Store/**",
          "**/node_modules/**",
          // "**/vendor/**",
          // "**/var/cache/**",
          "**/var/log/**"
        ],
        "intelephense.environment.documentRoot": "/workspace",
        "intelephense.stubs": [
          "apache",
          "bcmath",
          "bz2",
          "calendar",
          "com_dotnet",
          "Core",
          "ctype",
          "curl",
          "date",
          "dba",
          "dom",
          "enchant",
          "exif",
          "FFI",
          "fileinfo",
          "filter",
          "fpm",
          "ftp",
          "gd",
          "gettext",
          "gmp",
          "hash",
          "iconv",
          "imap",
          "intl",
          "json",
          "ldap",
          "libxml",
          "mbstring",
          "meta",
          "mysqli",
          "oci8",
          "odbc",
          "openssl",
          "pcntl",
          "pcre",
          "PDO",
          "Phar",
          "posix",
          "pspell",
          "readline",
          "Reflection",
          "session",
          "shmop",
          "SimpleXML",
          "sockets",
          "sodium",
          "SPL",
          "sqlite3",
          "standard",
          "superglobals",
          "sysvmsg",
          "sysvsem",
          "sysvshm",
          "tidy",
          "tokenizer",
          "xml",
          "xmlreader",
          "xmlrpc",
          "xmlwriter",
          "xsl",
          "Zend OPcache",
          "zip",
          "zlib"
        ],
        "intelephense.files.maxSize": 5000000,
        "intelephense.indexing.enabled": true
        // "intelephense.indexing.maxFiles": 10000
      }
    }
  }
}