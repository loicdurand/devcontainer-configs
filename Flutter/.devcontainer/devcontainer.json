{
  "name": "Flutter Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/flutter:1": {
      "version": "stable"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ],
      "settings": {
        "editor.fontSize": 18,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          }
        }
      }
    }
  },
  "postCreateCommand": "flutter pub get",
  "portsAttributes": {
    "8080": {
      "label": "Flutter Web",
      "onAutoForward": "notify"
    }
  },
  "remoteUser": "loic"
}