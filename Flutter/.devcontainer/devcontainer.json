{
    "name": "Flutter CLI Development with Firebase (Headless)",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/java:1": {
            "version": "21", // OpenJDK 21 stable pour Android builds
            "installMaven": false,
            "installGradle": false
        }
    },
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.flutter",
                "Dart-Code.dart-code",
                "ms-vscode.vscode-nodejs-extension-pack",
                "Firebase.firebase-snippets"
            ]
        }
    },
    "forwardPorts": [
        5037
    ]
}